
@{
    ViewBag.Title = "Flyshopper";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script type="text/javascript">
        $(function () {
            // Henter flyplassene(byer) du kan reise fra

            $.ajax({
                url: '/Home/hentAlleFraBy',
                type: 'GET',
                dataType: 'json',
                success: function (fraListe) {
                    VisFra(fraListe);
                },
                error: function (x, y, z) {
                    alert(x + '\n' + y + '\n' + z);


                }
            });

            function VisFra(fraListe) {
                var fraStreng = "";
                for (var i in fraListe) {
                    fraStreng += "<option value='" + fraListe[i] + "'>" + fraListe[i] + "</option>";
                }
                $("#dropfra").empty().append(fraStreng);
            }
            //Lager en hendelse i listen
            $("#dropfra").click(function () {
                var valgtFraFlysted = $(this).val();
                $.ajax({
                    url: '/Home/hentTilBy',
                    type: 'Get',
                    data: { fraBy: valgtFraFlysted },
                    dataType: 'json',
                    success: function (tilListe) {
                        VisTil(tilListe);
                    },
                    error: function (x, y, z) {
                        alert(x + '\n' + y + '\n' + z);


                    }
                });

            });
            function VisTil(tilListe) {
                var tilStreng = "";
                for (var i in tilListe) {
                    tilStreng += "<option value='" + tilListe[i] + "'>" + tilListe[i] + "</option>";
                }
                $("#droptil").empty().append(tilStreng);
            }
            //Lager en hendelse i listen
            $("#droptil").click(function () {
                var valgtTilFlysted = $(this).val();
                var valgtFraFlysted = $("#dropfra").val();
                $.ajax({
                    url: '/Home/hentFlyreise',
                    type: 'GET',
                    data: {
                        fraBy: valgtFraFlysted,
                        tilBy: valgtTilFlysted
                    },
                    dataType: 'json',
                    success: function (Flyreise) {
                        VisFlyreise(Flyreise);
                    },
                    error: function (x, y, z) {
                        alert(x + '\n' + y + '\n' + z);
                    }
                });
            });

            function VisFlyreise(Flyreise) {
                var reiseStreng = "<table class='table'><tr><th>Fra</th><th>Til</th><th>Tid</th><th>Pris</th></tr>";
                for (var i in Flyreise) {
                    reiseStreng += "<tr><td>" + Flyreise[i].fraBy + "</td><td>" + Flyreise[i].tilBy +
                        "</td><td>" + Flyreise[i].tid + "</td><td>" + Flyreise[i].pris + "</td><td><input type=" + "radio name=" + "radiobutton value=" + "radiobutton></td><tr/>";
                }
                reiseStreng += "</table>"
                $("#flyreiser").empty().append(reiseStreng);
            }

            //function BestillFlyreise
        });
    </script>


</head>
<body>
    <form action="/Controllers/HomeControllers" method="post">
        <table>
            <tr>
                <td>Fornavn</td>
                <td><input type="text" name="Fornavn" /> </td>
            </tr>
            <tr>
                <td>Etternavn</td>
                <td><input type="text" name="Etternavn" /></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="text" name="Email" /></td>
            </tr>
        </table>        
    <h2>Hvor vil du fly?</h2>


    <div class="container">
        <div class="row">
            <div id="Fra" class="col col-sm-2">
                Velg fra by:<br />
                <select id="dropfra" name="dropfra" class="btn btn-primary dropdown-toggle"></select>
            </div>
            <div id="Til" class="col">
                Velg til by:<br />
                <select id="droptil" name="droptil" class="btn btn-primary dropdown-toggle"></select>
            </div>            
                <br/>Velg dato: <input id="date" type="date" name="VelgDato" required />           
        </div>
    </div>

    <br/>Her er valgte mulige fly: <br />
    <div id="flyreiser" name="flyreiser"></div> <br />    
        <input type="submit" name="velg" value="Velg og betal med kort" />
    </form>
    <a href="/Home/Logginn">Admin Logg inn her</a>
</body>
</html>